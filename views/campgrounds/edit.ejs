<%- include('../partials/header.ejs') -%>
<div class="container">

    <h1 style="text-align: center;">Edit <%=campgrounds.name %></h1>
    <div style="width: 18rem; margin:0 auto;">
        <form action="/campgrounds/<%= campgrounds._id%>?_method=PUT" method="POST">
            <div class="form-group mt-2">
                <label for="PlaceName">Place Name</label>
                <input type="text" name="name" class="form-control" id="PlaceName" aria-describedby="PlaceName"
                    value="<%= campgrounds.name %>">
            </div>
            <div class="form-group mt-2 mb-2">
                <label for="price">Price</label>
                <input type="number" name="price" class="form-control" id="price" aria-describedby="price"
                    placeholder="Price" min="0.01" step="0.01" value="<%= campgrounds.price %>">
            </div>
            <div class="form-group mt-2 mb-2">
                <label for="url">Image URL</label>
                <input type="text" name="image" class="form-control" id="url" aria-describedby="imageUrl"
                    value="<%= campgrounds.image %>">
            </div>
            <div class="form-group mt-2 mb-2">
                <label for="desc">Description</label>
                <input type="text" name="desc" class="form-control" id="desc" aria-describedby="Description"
                    value="<%= campgrounds.description %>">
            </div>
            <div class="form-group mt-2 mb-2">
                <label for="location">Location</label>
                <input type="text" name="location" class="form-control" id="location" aria-describedby="location"
                    value="<%= campgrounds.location %>">
            </div>
            <div class="form-group mt-2 mb-2">
                <button type="submit" class="btn btn-info btn-block">Submit</button>
            </div>
            
            <div class="mt-2">
                <a href="/campgrounds">Back</a>
            </div>
        </form>
    </div>



</div>

<%- include('../partials/footer.ejs') -%>