<%- include('partials/header.ejs') -%>

<div class="container sign">
    <h1 style="text-align: center;">Sign up</h1>
    <div style="width: 18rem; margin:0 auto;">
        <form action="/register" method="POST">
            <div class="form-group mt-2">
                <label for="username">Username</label>
                <input id="username" name="username" placeholder="Username" class="form-control" type="text" required>
            </div>
            <div class="form-group mt-2 mb-2">
                <label for="password">password</label>
                <input id="password" name="password" placeholder="password" class="form-control" type="password" required>
            </div>
            <div class="form-group mt-2">
                <label for="firstName">First Name</label>
                <input id="firstName" name="firstName" pattern=".{2,40}" placeholder="First Name" class="form-control" type="text" required title="2 character and above">
            </div>
            <div class="form-group mt-2">
                <label for="lastName">Last Name</label>
                <input id="lastName" name="lastName" placeholder="Last Name" class="form-control" type="text">
            </div>
            <div class="form-group mt-2">
                <label for="email">Email</label>
                <input id="email" name="email" placeholder="Email" class="form-control" type="email" required>
            </div>
            <div class="form-group mt-2">
                <label for="avatar">Avatar</label>
                <input id="avatar" name="avatar" placeholder="Avatar URL" class="form-control" type="text">
            </div>
            <div class="form-group mt-2">
                <label for="about">About</label>
                <input id="about" name="about" placeholder="About" class="form-control" type="text">
            </div>
            <div class="form-group mt-2 mb-2">
                <label for="admin">Secret Key</label>
                <input id="admin" name="admin" placeholder="Admin Key" class="form-control" type="text">
            </div>
            <div class="form-group mt-2 mb-2">
                <button type="submit" class="btn btn-info btn-block">Sign up</button>
            </div>
           
        </form>
    </div>
</div>

<%- include('partials/footer.ejs') -%>